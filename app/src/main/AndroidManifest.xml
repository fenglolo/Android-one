<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fw.androidone">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 网络变化权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 监听系统开机广播权限 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> <!-- 打电话，需要动态申请 -->
    <uses-permission android:name="android.permission.CALL_PHONE" /> <!-- 读取手机联系人 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" /> <!-- 手机振动 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidOne">
        <!-- 注册自定义IntentService -->
        <service android:name=".service.MyIntentService" />
        <!-- 注册自定义service -->
        <service
            android:name=".service.MyService"
            android:enabled="true"
            android:exported="true" /> <!-- FileProvider -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.fw.androidone.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider> <!-- 注册自定义content provider -->
        <provider
            android:name=".contentprovider.MyContentProvider"
            android:authorities="com.fw.androidone.provider"
            android:enabled="true"
            android:exported="true" /> <!-- 注册自定义content provider -->
        <provider
            android:name=".contentprovider.DatabaseContentProvider"
            android:authorities="com.fw.androidone.provider"
            android:enabled="true"
            android:exported="true" /> <!-- 注册自定义广播 -->
        <receiver
            android:name=".broadcast.MyBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.fw.androidone.broadcast.MY_BROADCAST" />
            </intent-filter>
        </receiver> <!-- 静态注册的监听系统开机的广播 -->
        <receiver
            android:name=".broadcast.BootCompleteReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SelectActivity" /> <!-- RecyclerView -->
        <activity android:name=".activity.recycler.RecyclerActivity" />
        <activity android:name=".activity.recycler.RecyclerTestActivity" /> <!-- Fragment -->
        <activity android:name=".activity.fragment.FragmentTest1Activity" />
        <activity android:name=".activity.fragment.NewsActivity" />
        <activity android:name=".activity.fragment.NewsContentActivity" /> <!-- Broadcast -->
        <activity android:name=".activity.broadcast.BroadcastTestActivity" />
        <activity android:name=".activity.broadcast.BroadcastMyActivity" /> <!-- file save -->
        <activity android:name=".activity.filepersistenec.FileTest1Activity" />
        <activity android:name=".activity.filepersistenec.SharedTest2Activity" />
        <activity android:name=".activity.filepersistenec.DbActivity" />
        <activity android:name=".activity.filepersistenec.DbLitepalActivity" /> <!-- login -->
        <activity android:name=".activity.login.LoginActivity" />
        <activity android:name=".activity.login.LoginOutTestActivity" /> <!-- permission -->
        <activity android:name=".activity.permission.PermissonActivity" /> <!-- content provider -->
        <activity android:name=".activity.contentprovider.ContentProviderTextActivity" />
        <activity android:name=".activity.contentprovider.ContentProviderGetLocalPhoneNumActivity" /> <!-- 通知 -->
        <activity android:name=".activity.notification.NotificationActivity" />
        <activity android:name=".activity.notification.NotificationtestActivity" /> <!-- 调用摄像头和相册 -->
        <activity android:name=".activity.photo.TakePhotoActivity" />
        <activity android:name=".activity.photo.OpenCameraActivity" /> <!-- 播放多媒体文件 -->
        <activity android:name=".activity.paly.PlayAudioActivity" />
        <activity android:name=".activity.paly.PlayVideoActivity" /> <!-- webview -->
        <activity android:name=".activity.webview.WebviewActivity" />
        <activity android:name=".activity.network.HttpUrlConnectionActivity" />
        <activity android:name=".activity.network.OkHttpActivity" /> <!-- thread service -->
        <activity android:name=".activity.thread.AndroidThreadActivity" />
        <activity android:name=".activity.service.ServiceTestActivity" />
        <!-- material design -->
        <activity
            android:name=".activity.material.MaterialTestActivity"
            android:label="Fruit" />
        <activity
            android:name=".activity.material.MaterialFruitActivity"
            android:theme="@style/MaterialFruitActivityTheme" />
        <!--weather-->
        <activity
            android:name=".weather.WeatherActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>