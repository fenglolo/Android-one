<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fw.androidone">

    <!-- 网络变化权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 监听系统开机广播权限 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidOne">
        <!--注册自定义广播-->
        <receiver
            android:name=".broadcast.MyBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.fw.androidone.broadcast.MY_BROADCAST" />
            </intent-filter>
        </receiver>
        <!-- 静态注册的监听系统开机的广播 -->
        <receiver
            android:name=".broadcast.BootCompleteReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SelectActivity" />
        <!-- RecyclerView -->
        <activity android:name=".activity.recycler.RecyclerActivity" />
        <activity android:name=".activity.recycler.RecyclerTestActivity" />
        <!-- Fragment -->
        <activity android:name=".activity.fragment.FragmentTest1Activity" />
        <activity android:name=".activity.fragment.NewsActivity" />
        <activity android:name=".activity.fragment.NewsContentActivity" />
        <!-- Broadcast -->
        <activity android:name=".activity.broadcast.BroadcastTestActivity" />
        <activity android:name=".activity.broadcast.BroadcastMyActivity" />
        <!-- file save -->
        <activity android:name=".activity.filepersistenec.FileTest1Activity" />
        <activity android:name=".activity.filepersistenec.SharedTest2Activity" />
        <activity android:name=".activity.filepersistenec.DbActivity" />
        <activity android:name=".activity.filepersistenec.DbLitepalActivity" />
        <!-- login -->
        <activity android:name=".activity.login.LoginActivity" />
        <activity android:name=".activity.login.LoginOutTestActivity" />
    </application>

</manifest>